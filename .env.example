# Environment Configuration Template
# Copy this file to .env and update with your values

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///medical_ir.db
DATABASE_PATH=medical_ir.db

# Search Configuration
INDEX_PATH=index
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100

# Logging
LOG_LEVEL=INFO

# Production Settings (for deployment)
# DATABASE_URL=postgresql://user:password@localhost/medical_ir
# REDIS_URL=redis://localhost:6379/0

# Hosting Configuration
HOST=0.0.0.0
PORT=5000

# For cloud deployment (uncomment as needed)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name

# For Heroku deployment
# DATABASE_URL will be automatically set by Heroku